{
  "name": "jonnypickardjs",
  "version": "1.0.0",
  "description": "Portfolio website",
  "repository": "git@github.com:JonnyPickard/jonnypickardjs.git",
  "author": "Jonny Pickard <jonathandpickard@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "REACT_APPLICATION": "",
    "deploy": "node scripts/deploy.js",
    "start": "yarn wsrun start @jonnypickardjs/app",
    "bundle": "yarn && yarn wsrun bundle @jonnypickardjs/app",
    "COMPONENT_LIBRARY": "",
    "deploy-storybook": "yarn wsrun deploy @jonnypickardjs/component-library",
    "start-storybook": "yarn wsrun start @jonnypickardjs/component-library",
    "build-storybook": "yarn wsrun build-storybook @jonnypickardjs/component-library",
    "test-components": "yarn wsrun test @jonnypickardjs/component-library",
    "test-components:coverage": "yarn wsrun test-coverage @jonnypickardjs/component-library",
    "NPM SCRIPTS": "",
    "preinstall": "yarn-only"
  },
  "workspaces": [
    "app",
    "component-library",
    "content",
    "assets",
    "style",
    "shared",
    "component-library/src/clib-shared",
    "component-library/src/components/HOC/*",
    "component-library/src/components/Atoms/*",
    "component-library/src/components/Molecules/*",
    "component-library/src/components/Organisms/*"
  ],
  "devDependencies": {
    "flow-bin": "^0.84.0",
    "gh-pages": "^2.0.1",
    "wsrun": "^2.2.1"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "classnames": "2.2.6",
    "react": "16.4.2",
    "yarn-only": "^1.0.4"
  }
}
